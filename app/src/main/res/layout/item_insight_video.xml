<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginStart="24dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="16dp">

    <FrameLayout
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">
<!--                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView-->
<!--                    android:id="@+id/youtube_player_view"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:videoId="S0Q4gqBUs7c"-->
<!--                    app:autoPlay="true"-->
<!--                    app:showFullScreenButton="false" />-->
                <ImageView
                    android:id="@+id/imgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:src="@color/colorRegisterInActive">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvBanner"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/imgBtnOpen"
                android:text="@string/title"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/imgBtnOpen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_insight_arrow"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/cvBanner"
                android:background="@android:color/white"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_insight_play"
            android:layout_marginTop="46dp"/>
    </FrameLayout>
</LinearLayout>