<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.Home.KegiatanActivity"
    android:orientation="vertical"
    android:background="@android:color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingTop="17dp"
        android:paddingEnd="16dp"
        android:paddingBottom="17dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/rekomendasi_kegiatan"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/svKegiatan"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:queryHint="@string/cari_kegiatan"
        android:hint="@string/cari_kegiatan"
        android:textSize="14sp"
        android:background="@drawable/input_selector_bg_kegiatan"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:iconifiedByDefault="false"
        android:focusable="true"
        app:searchIcon="@drawable/ic_search"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>


</LinearLayout>