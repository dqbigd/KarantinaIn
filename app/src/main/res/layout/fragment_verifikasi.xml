<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login.ForgotPassword.VerifikasiFragment"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_forgot_pass_verifikasi"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kami telah mengirimkan kode verifikasi ke email yang Anda masukkan"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:paddingStart="62dp"
        android:paddingEnd="62dp"
        android:textColor="#979797"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/lyField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan kode verifikasi"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"/>

        <com.jkb.vcedittext.VerificationCodeEditText
            android:id="@+id/etVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:bottomLineHeight="2dp"
            app:bottomLineNormalColor="@color/colorOnBoardInactive"
            app:bottomLineSelectedColor="@color/colorAccent"
            app:figures="6"
            app:selectedBackgroundColor="@android:color/white"
            app:verCodeMargin="10dp" />

    </LinearLayout>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:background="@drawable/bg_green_rounded"
        android:textAllCaps="false"
        android:text="@string/selanjutnya"
        android:textColor="@android:color/white"/>

</LinearLayout>