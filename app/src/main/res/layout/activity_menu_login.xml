<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.MenuLoginActivity"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <ImageView
        android:layout_width="174dp"
        android:layout_height="171dp"
        android:src="@drawable/logo_splash"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDesc"
        android:layout_marginBottom="34dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="Selamat datang di KarantinaIn"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi untuk memastikan pasien ODP tetap berada dirumah, memantau perkembangan kesehatan tubuh pasien dan menyajikan informasi yang dapat membantu meningkatkan immunitas tubuh pasien ODP"
        android:layout_above="@+id/lyButton"
        android:layout_marginBottom="26dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/lyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/bg_white_border_green_rounded"
            android:text="Daftar"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/bg_green_rounded"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_marginStart="22dp"/>
    </LinearLayout>
</RelativeLayout>